extends layout

block content
    div.container
        div.row
            div.col-md-2
            div.col-md-8
                h1.text-center.login-title 所有作业

                if assignments.length == 0
                    if user.identity == "1"
                        p
                            | 太棒辣，没有作业！
                    if user.identity == "0"
                        p
                            | 你还没发布作业
                        a(href='/assign') 现在去发布
                else
                    div.list-group
                        each assign in assignments
                            a.list-group-item(href='/assignments/#{assign._id}')
                                ul 
                                    li #{assign.title}
                                    li #{assign.description}
                                    li #{assign.deadline}
            div.col-md-2
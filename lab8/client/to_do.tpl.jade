if user
  .col-sm-10
    .dropdown.things
      button.btn.dropdown-toggle#todo(type='button' data-toggle='dropdown') 你要？
        span.caret
      ul.dropdown-menu(role='menu' aria-labelledby='todo')
        if user.identity = 'Student'
          li.submit-homework(role='presentation')
            a(role='menuitem' tabindex='-1' href='#') 提交作业
          li.my-homeworks(role='presentation')
            a(role='menuitem' tabindex='-1' href='#') 我的作业
        else if user.identity = 'Teacher'
          li.post-assignment(role='presentation')
            a(role='menuitem' tabindex='-1' href='#') 发布作业
          li.all-assignments(role='presentation')
            a(role='menuitem' tabindex='-1' href='#') 所有作业

if homework
  .already
    p.bg-info 你已经提交过了
    p #{homework.time}
    p #{homework.content}

else
  form.form-horizontal
    .form-group
      label.col-sm-1.control-label(for='content') 内容
      .col-sm-8
        textarea.form-control(name='content' id='content' placeholder='你的作业写在这里' required)
    .form-group
      .col-sm-offset-1.col-sm-8
        input.btn.btn-primary(type='submit' value='提交')